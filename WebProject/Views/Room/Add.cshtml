@model AddRoomViewModel

@{
    ViewBag.Title = "Create a New Room";
}


<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form asp-controller="Room" asp-action="Add" method="post" enctype="multipart/form-data">
            <div class="mb-3">
                <label asp-for="@Model.Name" class="form-label-add-edit">Name</label>
                <input asp-for="@Model.Name" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Description" class="form-label-add-edit">Description</label>
                <textarea asp-for="@Model.Description" class="form-control" aria-required="true" rows="5"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.PricePerNight" class="form-label-add-edit">Price per night</label>
                <input asp-for="@Model.PricePerNight" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.PricePerNight" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.BedId" class="form-label-add-edit">Type of bed</label>
                <select asp-for="@Model.BedId" class="form-control" aria-required="true">
                    @foreach (var type in Model.Beds)
                    {
                                    <option value="@type.Id">@type.TypeName</option>
                    }
                </select>
                <span asp-validation-for="@Model.BedId" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.RoomTypeId" class="form-label-add-edit">Room Type</label>
                <select asp-for="@Model.RoomTypeId" class="form-control" aria-required="true">
                    @foreach (var type in Model.RoomTypes)
                    {
                                    <option value="@type.Id">@type.Name</option>
                    }
                </select>
                <span asp-validation-for="@Model.RoomTypeId" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">Upload Room Images</label>
                <input class="form-control" type="file" name="Files" multiple />
            </div>
            <div class="mb-3">
                @foreach (var checkbox in Model.Checkboxes)
                {
                                <label class="form-check-label" for="checkbox_@checkbox.Value">
                        @checkbox.Description
                                </label>
                            <div class="form-check">
                                <input class="form-check-input"
                            type="checkbox"
                            value="@checkbox.Value"
                            name="UniqueName"
                            id="checkbox_@checkbox.Value"
                            checked="@checkbox.IsChecked">
                            </div>
                }
            </div>
                <div class="form-group">
                    <input class = "btn btn-primary" type="submit" value="Add" />
                </div>
        </form>
    </div>
</div>


@section Scripts {
                <partial name="_ValidationScriptsPartial" />
}

