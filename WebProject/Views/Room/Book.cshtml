@model BookRoomViewModel

@{
    ViewBag.Title = "Book information";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form asp-action="Book" method="post">
            <h1 class="text-center">@Model.Name</h1>
            <div class="mb-3">
                <label asp-for="@Model.BookFrom" class="form-label">Book From</label>
                <input asp-for="@Model.BookFrom" class="form-control" aria-required="true" value="@Model.BookFrom />
            </div>
            <div class="mb-3">
                <label asp-for="@Model.DaysOfStay" class="form-label-add-edit">Days Of Stay</label>
                <input asp-for="@Model.DaysOfStay" class="form-control" aria-required="true" value="@Model.DaysOfStay />
            </div>
            <div class="mb-3">
                <input class="btn btn-warning mb-2 w-100 p-3 fw-bold" type="submit" value="Book" />
                <a asp-controller="Room" asp-action="All" class="btn btn-warning mb-2 w-100 p-3 fw-bold">Back to All Rooms</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
            <partial name="_ValidationScriptsPartial" />
}